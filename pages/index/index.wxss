#root {
  background-image: url("https://images.pexels.com/photos/1869961/pexels-photo-1869961.jpeg");
  background-size: cover;
  height: 100vh;
}

.blur {
  backdrop-filter: blur(1em);
  /* background-color: rgba(255, 255, 255, 0.295); */
  color: rgb(115, 234, 255);
  text-shadow: 0 0 0.5em rgb(0, 0, 0);
  border: none;
  outline: none;
  height: 7em;
  position: relative;
}

.tit {
  position: absolute;
  bottom: 1em;
  left: 50%;
  transform: translateX(-50%);
  width: fit-content;
}

.title {
  font-size: 1.6em;
	text-align: center;
	box-shadow: 0 0.2em 1em black;
}
.icons {
  text-align: center;
	/* overflow: hidden; */
	backdrop-filter: blur(1em);
}

.icon {
	animation: ani 2s linear infinite;
}

.text {
  font-size: 3em;
  font-weight: bold;
	text-align: center;
	color: white;
	text-shadow: 0 0 0.3em rgb(255, 0, 221);
}

.temprature {
  font-size: 1.5em;
  font-weight: bold;
	text-align: center;
	color: white;
	font-family: sans-serif;
	text-shadow: 0 0 0.3em rgb(255, 0, 221);
}

.wind {
  display: flex;
  justify-content: center;
	font-size: 1.3em;
	color: white;
	font-family: sans-serif;
	text-shadow: 0 0 0.3em rgb(255, 0, 221);
}
.windScale {
	margin-left: 1em;
	color: white;
	font-family: sans-serif;
	text-shadow: 0 0 0.3em rgb(255, 0, 221);
}

@keyframes ani {
	0% {
		transform: scale(0.8);
	}
	50% {
		transform: scale(0.6);
	}
	100% {
		transform: scale(0.8);
	}
}